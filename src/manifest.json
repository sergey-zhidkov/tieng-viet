{
  "manifest_version": 3,
  "name": "TiengViet: Vietnamese-English Dictionary",
  "short_name": "TiengViet",
  "version": "1.0.0",
  "homepage_url": "https://github.com/sergey-zhidkov/tieng-viet",
  "description": "Great tool for learning Vietnamese. Includes links to Vietnamese Grammar Wiki. Supports adding words to Skritter.",
  "icons": {
    "16": "images/zhongwen16.png",
    "48": "images/zhongwen48.png",
    "128": "images/zhongwen.png"
  },
  "browser_action": {
    "default_icon": "images/zhongwen48.png",
    "default_title": "TiengViet Vietnamese Popup Dictionary"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery-3.3.1.min.js", "js/zhuyin.js", "content.js"],
      "css": ["css/content.css"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["contextMenus", "tabs"],
  "commands": {
    "_execute_browser_action": {
      "description": "Enable/Disable TiengViet"
    }
  },
  "web_accessible_resources": ["css/*", "js/*", "images/*"]
}
